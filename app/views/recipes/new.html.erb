<div class="index-header">
	<h2><%= action_name.capitalize %> Recipe</h2>
</div>

<%= nested_form_for @recipe do |f| %>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<%= f.hidden_field :user_id, value: current_user.id %>
				<%= f.label :name %>
				<%= f.text_field :name, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, class: "form-control", rows: 5 %>
			</div>
		</div>
		<div class="col-md-6 text-center">
			<%= fa_icon "picture-o", style: "font-size: 150px; color: #dddddd" %>
			<br>
			<%= link_to "Add Picture", "#" %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6">
			<h4>Ingredients</h4>
			<%= f.fields_for :measurements do |m| %>
				<div class="row form-group add-ingredient">
					<div class="col-xs-5">
						<%= m.fields_for :ingredients, Ingredient.new do |i| %>
							<%= i.text_field :name, class: "form-control", placeholder: "Name" %>
						<% end %>
					</div>
					<div class="col-xs-3">
						<%= m.text_field :amount, class: "form-control", placeholder: "Amt." %>
					</div>
					<div class="col-xs-3">
						<%= m.text_field :unit, class: "form-control", placeholder: "Unit" %>
					</div>
					<div class="col-xs-1">
						<%= m.link_to_remove raw(fa_icon "times-circle") %>
					</div>
				</div>
			<% end %>
			<%= f.link_to_add "Add Ingredient", :measurements, class: "btn btn-xs btn-primary" %>
		</div>
	</div>
	<br>
	<%= link_to "Cancel", :back, class: "btn btn-default" %>
	<%= f.submit "Save", class: "btn btn-success" %>
<% end %>
