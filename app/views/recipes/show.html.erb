<div class="row">
	<div class="col-md-8">
		<div id="recipe" class="well">
			<h2 class='description'><%= @recipe.description %></h2>
			<div id="recipe-image">
	  		<%= image_tag guaranteed_image_path(@recipe, :large) %>
			</div>
			<div class='recipe-container'>
				<%= @recipe.instructions.html_safe unless @recipe.instructions.blank? %>
				<%= content_tag :h3, "Ingredients", class: "ribbon" %>
				<%= render @recipe.ingredients %>
			</div>
		</div>
		<%= render 'layouts/social', sociable: @recipe, head: false %>
		<div class="row">
			<div class="col-md-12">
				<br>
				<%= disqus_comments(@recipe) %>
			</div>
		</div>
	</div>
	<div class="col-md-4 hidden-xs">
		<%#= render 'ratings/rate_it' unless can?(:manage, @recipe) %>
		<%= render 'layouts/sidebar' %>
	</div>
</div>
<%= link_to material_icon('edit'), edit_recipe_path(@recipe.presentable), class: "btn btn-success btn-fab" if can?(:manage, @recipe) %>
