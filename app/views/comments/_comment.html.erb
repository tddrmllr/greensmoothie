<% user = comment.user %>
<div class="comment media" id="comment-<%= comment.id %>">
	<a class="pull-left text-center" href="<%= user_path(user) %>">
    <% if user.image? %>
    	<%= image_tag(comment.user.image.image.url(:thumb)) %>
    <% else %>
    	<%= fa_icon "user", style: "color: #666666; font-size: 40px" %>
    <% end %>
  </a>
  <div class="media-body">
    <h5 class="media-heading">
    	<%= comment.user.username %>
    	<small><%= time_ago_in_words(comment.created_at) %> ago</small>
    	<%= link_to "Delete", eval("#{comment.commentable_type.downcase}_comment_path(comment.commentable_id, comment)"), method: :delete, class: "btn btn-danger btn-xs pull-right", remote: true if can? :manage, comment %>
    </h5>
    <%= comment.body %>
  </div>
</div>
