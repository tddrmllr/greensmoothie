$(document).ready(function(){
	var stack_bottomright = {"dir1": "down", "dir2": "left", "firstpos1": 95, "firstpos2": 25}
	<% if flash[:error] %>
		$.pnotify({
	    text: '<%= flash[:error] %>',
	    type: 'error',
	    history: false,
	    icon: false,
	    sticker: false,
	    closer: true,
	    styling: 'fontawesome'
		});
	<% elsif flash[:notice] %>
		$.pnotify({
	    text: '<%= flash[:notice] %>',
	    type: 'success',
	    history: false,
	    icon: false,
			sticker: false,
	    closer: true,
	    styling: 'fontawesome',
	    stack: stack_bottomright
		});
	<% elsif flash[:alert] %>
		$.pnotify({
	    text: '<%= flash[:alert] %>',
	    type: 'notice',
	    history: false,
	    icon: false,
	    sticker: false,
	    closer: true,
	    styling: 'fontawesome'
		});
	<% end %>
});