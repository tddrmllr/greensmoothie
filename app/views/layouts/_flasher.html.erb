$(document).ready(function(){
	<% if flash[:error] || flash[:alert] %>
		$.pnotify({
	    text: '<%= flash[:error] || flash[:alert] %>',
	    type: 'error',
	    history: false,
	    icon: false,
	    sticker: false,
	    closer: true,
	    styling: 'fontawesome'
		});
	<% elsif flash[:success] %>
		$.pnotify({
	    text: '<%= flash[:success] %>',
	    type: 'success',
	    history: false,
	    icon: false,
			sticker: false,
	    closer: true,
	    styling: 'fontawesome'
		});
	<% elsif flash[:notice] %>
		$.pnotify({
	    text: '<%= flash[:notice] %>',
	    type: 'notice',
	    history: false,
	    icon: false,
	    sticker: false,
	    closer: true,
	    styling: 'fontawesome'
		});
	<% end %>
});
