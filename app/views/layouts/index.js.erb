$("#<%= escape_javascript(controller_name)%>").html("<%= escape_javascript(render instance_variable_get("@#{controller_name}"))%>")

<% if controller_name == "recipes" %>
	var container, msnry;

	container = document.querySelector("#recipes");

	msnry = new Masonry(container, {
	  itemSelector: ".grid",
	  columnWidth: container.querySelector('.size')
	});

	msnry.bindResize();
<% end %>
