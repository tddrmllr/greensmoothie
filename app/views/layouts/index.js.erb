$("#<%= escape_javascript(controller_name)%>").html("<%= escape_javascript(render instance_variable_get("@#{controller_name}"))%>")

<% if controller_name == "recipes" %>
	$("#recipes").imagesLoaded(function() {
	  $("#recipes").masonry({
	    itemSelector: ".grid",
	    columnWidth: function(containerWidth) {
	      return containerWidth / 4;
	    }
	  });
	  return $("#recipes").masonry("reload");
	});
<% end %>
