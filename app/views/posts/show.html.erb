<%= render 'layouts/social', sociable: @post, head: true %>
<br>
<div class="row">
	<div class="col-md-8">
		<div class="well" id="post">
			<%= content_tag(:p, @post.headline, class: "lead") unless @post.headline.blank? %>
			<%= image_tag @post.image.image.url(:original), style: "width: 100%; margin-bottom: 15px" if @post.image? %>
			<%= @post.body.html_safe %>
			<%= show_tags(@post) %>
		</div>
	</div>
	<div class="col-md-4">
		<%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-primary btn-lg btn-block", style: "margin-bottom: 10px" if can? :manage, @post %>
		<%= render 'layouts/sidebar' %>
	</div>
</div>
<%= render 'layouts/social', sociable: @post, head: false %>
<div class="row">
	<div class="col-md-6">
		<%= render 'comments/commentable', commentable: @post %>
	</div>
</div>
