<%= render 'layouts/social', sociable: @post, head: true %>
<br>
<div class="row">
	<div class="col-md-8">
		<div class="well" id="post">
			<%= content_tag(:p, @post.headline, class: "lead") unless @post.headline.blank? %>
			<div class="row" style="margin-left: -19px; margin-right: -19px">
			<%= image_tag @post.image.image.url(:original), style: "width: 100%; margin-bottom: 15px" if @post.image? %>
			</div>
			<%= @post.body.html_safe %>
		</div>
	</div>
	<div class="col-md-4">
		<%= render 'layouts/sidebar' %>
	</div>
</div>
<%= render 'layouts/social', sociable: @post, head: false %>
<div class="row">
	<div class="col-md-8">
		<br>
		<%= disqus_comments(@post) if request.fullpath.include?('/blog') %>
	</div>
</div>
<%= link_to material_icon('edit'), edit_post_path(@post.presentable), class: "btn btn-success btn-fab" if can?(:manage, @post) %>
