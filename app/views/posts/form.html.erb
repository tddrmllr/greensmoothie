<div class="index-header">
	<h2><%= action_name.capitalize %> Blog Post</h2>
</div>

<div class="row">
	<div class="col-md-3 text-center">
		<%= render 'images/imageable', resource: @post %>
	</div>
	<div class="col-md-9">
		<%= form_for @post do |f| %>
			<div class="row">
				<div class="col-md-12">
					<%= render 'tags/tag_list', taggable: @post %>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<%= f.label :name %>
					<%= f.text_field :name, class: "form-control" %>
				</div>
				<div class="col-md-6">
					<%= render 'tags/tag_form', taggable: @recipe %>
				</div>
			</div>
			<br>
			<%= f.cktext_area :body, ckeditor: {height: 300} %>
			<br>
			<%= link_to "Cancel", :back, class: "btn btn-default" %>
			<%= f.submit "Save", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
<br>
