<div class="row">
	<div class="col-md-9">
		<div class="well" id="post-form">
			<%= form_for @post do |f| %>
				<%= f.hidden_field :image_token %>
				<%= f.hidden_field :user_id %>
				<%= f.hidden_field :published_at %>
				<%= render 'layouts/errors', object: @post if @post.errors.any? %>
				<div class="row">
					<div class="col-md-12">
						<%= f.label :name %>
						<%= f.text_field :name, class: "form-control" %>
					</div>
				</div>
				<br>
				<%= f.label :headline %>
				<%= f.text_area :headline, class: "form-control", rows: 2 %>
				<br>
				<%= f.label :abstract %>
				<%= f.text_area :abstract, class: "form-control", rows: 3 %>
				<br>
				<%= f.label :body %>
				<br>
				<%= f.text_area :body, class: "form-control summernote-post", rows: 5 %>
				<br>
				<div class='form-footer'>
					<%= link_to "Delete Post", "#", class: 'pull-left btn btn-danger delete', data: {url: post_path(@post), title: "Delete Post", text: "Are you sure you want to delete this post?"} if @post.persisted? %>
					<%= link_to "Cancel", :back, class: "btn btn-default" %>
					<%= f.submit "Save", class: "btn btn-info", data: {loading_text: "Saving..."} %>
					<%= link_to "Publish", '#', class: "btn btn-primary", id: 'post-publish', data: {loading_text: "Publishing..."} unless @post.published? %>
				</div>
			<% end %>
		</div>
	</div>
	<div class="col-md-3 text-center">
		<%= render 'images/imageable', resource: @post %>
	</div>
</div>
<br>
