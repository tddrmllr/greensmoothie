<div class="post">
	<div class="row">
		<div class="col-md-5">
			<% image = image_tag post.image.image.url(:medium), style: "width: 100%" if post.image? %>
			<%= link_to image, post.named_route %>
			<div class="overlay">
				<%= link_to fa_icon("comments") + " Comments" + comment_count(post), post.named_route + "#commentable" %>
				<%= link_to "Edit", edit_post_path(post), class: "btn btn-xs btn-primary" if can? :manage, post %>
			</div>
		</div>
		<div class="col-md-7">
			<div class="abstract">
				<h2><a href="/posts/<%= post.id %>/<%= post.named_route %>"><%= post.name %></a></h2>
				<p><%= post.abstract %></p>
			</div>
		</div>
	</div>
</div>


