<%= f.hidden_field :image_token %>
<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
	<%= f.label :description %>
	<% if mobile_device? %>
		<br>
		<%= f.text_area :description, id: "description", class: "form-control summernote" %>
	<% else %>
		<%= f.cktext_area :description, id: "description", ckeditor: {toolbar: "Mini"} %>
	<% end %>
</div>
<% unless @elem %>
	<%= label_tag :nutrients %> <%= fa_icon 'question-circle', data: {toggle: 'popover-hover', placement: 'right', content: 'List the nutrients of this ingredient (Vitamin A, Vitamin C), and provide a link to the source where the information can be verified.'} %>
	<br>
	<%= f.fields_for :citations do |c| %>
		<div class="row form-group add-ingredient">
			<div class="col-sm-5 nutrient">
				<%= c.fields_for :nutrient, Nutrient.where(id: c.object.citable_id).first do |n| %>
					<%= n.text_field :name, class: "form-control nutrient-input", placeholder: "Name" %>
				<% end %>
				<%= c.hidden_field :citable_type, value: "Nutrient" %>
				<%= c.hidden_field :citable_id, class: "citable-id" %>
				<%= c.hidden_field :citer_type %>
				<%= c.hidden_field :citer_id %>
			</div>
			<div class="col-sm-5">
				<%= c.text_field :source, class: "form-control", placeholder: "Citation" %>
			</div>
			<div class="col-sm-1">
				<%= c.link_to_remove raw(fa_icon "times-circle"), class: "btn-primary-bg hidden-xs" %>
				<%= c.link_to_remove "Remove", class: "btn btn-xs btn-danger visible-xs pull-right" %>
			</div>
		</div>
	<% end %>
	<%= f.link_to_add "Add Nutrient", :citations, class: "btn btn-xs btn-primary" %>
	<br>
	<br>
<% end %>
<%= hidden_field_tag :elem, @elem %>
