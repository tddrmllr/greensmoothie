<div class="media ingredient" id="ingredient-<%= ingredient.id %>">
  <%= link_to '', named_url_for(ingredient), class: 'pull-left ingredient-image', style: "background-image: url(#{thumbnail_image_path(ingredient)})" %>
  <div class="media-body">
  	<h4 class="media-heading">
  		<%= link_to ingredient.name, named_url_for(ingredient) %>
  		<% if @recipe %>
			  <% measurement = @recipe.measurements.where(ingredient_id: ingredient.id).first %>
		  	<small>
					<%= measurement.amount %>
					<%= measurement.unit %>
		  	</small>
			<% end %>
  	</h4>
  </div>
</div>
