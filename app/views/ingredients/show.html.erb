<div class="row">
	<div class="col-md-4 visible-xs">
		<% if @ingredient.image? %>
			<%= image_tag @ingredient.image.image.url(:medium), class: "shadow", style: "width: 100%" %>
		<% else %>
			<%= image_tag 'ingredient.png', style: "width: 100%; opacity: .5" %>
		<% end %>
		<br>
		<br>
	</div>
	<div class="col-md-8">
		<div class="well">
			<%= link_to "Edit", edit_ingredient_path(@ingredient), class: "btn btn-primary btn-sm manage" if can? :edit, @ingredient %>
			<%= link_to "Delete", ingredient_path(@ingredient), class: "btn btn-danger btn-sm manage", method: :delete if can? :manage, @ingredient %>
			<h4 class="ribbon">Description</h4>
			<% if !@ingredient.description.blank? %>
				<p><%= @ingredient.description.html_safe %></p>
			<% else %>
				<br>
				<p class='alert alert-info' style='margin-bottom: 0px'>No entry for this ingredient yet. <%= user_signed_in? ? 'Tell us what you know about it!' : link_to('Sign up', new_user_registration_path )+ ' and tell us what you know about it!' %></p>
			<% end %>
			<br>
			<% if @ingredient.nutrients.any? %>
				<%= content_tag :h4, "Nutrition", class: "ribbon" %>
				<div class='row'>
					<div class='col-sm-4'>
						<%= render 'vitamins' %>
					</div>
					<div class='col-sm-4'>
						<%= render 'minerals' %>
					</div>
					<div class='col-sm-4'>
						<%= render 'macronutrients' %>
					</div>
				</div>
				<p class='ingredient-source'>
					<%= @ingredient.serving_size %><br>
					<%= link_to "Source: USDA - #{@ingredient.usda_name}", @ingredient.source_url, target: "_blank" %>
				</p>
			<% end %>
		</div>
	</div>
	<div class="col-md-4 hidden-xs">
		<% if @ingredient.image? %>
			<%= image_tag @ingredient.image.image.url(:medium), class: "shadow", style: "width: 100%" %>
		<% else %>
			<%= image_tag 'ingredient.png', style: "width: 100%; opacity: .5" %>
		<% end %>
		<br>
		<br>
	</div>
</div>
