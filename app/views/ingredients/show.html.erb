<div class="index-header">
	<h2>
		<%= @ingredient.name %>
		<%= link_to "Edit", edit_ingredient_path(@ingredient), class: "btn btn-primary pull-right" %>
	</h2>
</div>

<div class="row">
	<div class="col-md-3">
		<% if @ingredient.image? %>
			<%= image_tag @ingredient.image.image.url(:medium), class: "img-thumbnail", style: "width: 100%" %>
		<% else %>
			<%= fa_icon "picture-o", style: "font-size: 100px; color: #dddddd" %>
		<% end %>
	</div><div class="col-md-9">
		<%= @ingredient.description.html_safe %>
	</div>
</div>

