<div class="row">
	<div class="col-md-8">
		<%= search_form_for @search, remote: true do |f| %>
			<%= f.text_field :name_or_description_or_nutrients_name_cont, id: "ingredient-search", class: "index-search form-control input-lg", placeholder: "Search", data: {type: "ingredient"} %>
			<%= hidden_field_tag :page, 1 %>
		<% end %>
		<div class="well" id="ingredients">
			<%= render @ingredients %>
		</div>
		<br>
		<%= render 'layouts/infinite', model: Ingredient, per: 12 %>
	</div>
	<div class="col-md-4">
		<%= render 'layouts/sidebar' %>
	</div>
</div>
<%= link_to material_icon('plus'), new_ingredient_path, class: "btn btn-success btn-fab", data: { toggle: 'tooltip', title: 'New Ingredient', placement: 'left' } if user_signed_in? %>
