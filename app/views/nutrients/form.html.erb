<div class="index-header">
	<h2><%= action_name.capitalize %> Nutrient</h2>
</div>

<%= nested_form_for @nutrient, html: {id: "nutrient-form"} do |f| %>
	<div class="row">
		<div class="col-md-9">
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, class: "form-control description", rows: 5, placeholder: "Describe the benefits and general traits of the nutrient and cite your sources below" %>
			</div>
			<%= label_tag :benefits %>
				<br>
				<%= f.fields_for :benefits do |b| %>
					<div class="row form-group add-ingredient">
						<div class="col-xs-12">
						<div class="col-xs-10 well">
							<%= b.text_field :name, class: "form-control input-sm", placeholder: "Name", style: "margin-bottom: 5px" %>
							<%= b.text_area :description, class: "form-control input-sm benefit", placeholder: "Description", rows: 2, style: "margin-bottom: 5px" %>
							<% benefit = b.object %>
							<%= b.fields_for :citation, Citation.where(citable_type: benefit.class.name, citable_id: benefit.id).first_or_initialize do |c| %>
								<%= c.text_field :source, class: "form-control input-sm", placeholder: "Source" %>
								<%= c.hidden_field :citable_type %>
								<%= c.hidden_field :citable_id %>
								<%= c.hidden_field :citer_type %>
								<%= c.hidden_field :citer_id %>
							<% end %>
						</div>
						<div class="col-xs-1">
							<%= b.link_to_remove raw(fa_icon "times-circle"), class: "btn-primary-bg" %>
						</div>
					</div>
					</div>
				<% end %>
				<%= f.link_to_add "Add Benefit", :benefits, class: "btn btn-xs btn-primary" %>
			<br>
			<br>
		</div>
		<div class="col-md-3">
			<div class="alert alert-green">
				<h4>Cite Your Sources</h4>
				<p>Green Smoothie is meant to be a resource for people who care about what they eat, so please don't provide accurate information.</p>
				<p>If you want to contribute, make sure to cite the source of the information you provide (that doesn't mean just providing a link to someone's blog).</p>
				<p>Content on Green Smoothie is user generated and moderated, so it's up to you to keep it real.</p>
			</div>
		</div>
	</div>
	<%= link_to "Cancel", :back, class: "btn btn-default" %>
	<%= f.submit "Save", class: "btn btn-success" %>
<% end %>
<script>
	$(document).ready(function(){
    $('.description').each(function(i, elem) {
      $(elem).wysihtml5({'font-styles': false, 'image': false, 'link': false});
    });
    $('textarea.benefit').each(function(i, elem) {
      $(elem).wysihtml5({
      	 "font-styles": false,
		     "emphasis": false,
		     "lists": false,
		     "html": false,
		     "link": false,
		     "image": false,
		     "color": false
      });
    });
  })
</script>