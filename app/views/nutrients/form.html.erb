<div class="index-header">
	<h2><%= action_name.capitalize %> Ingredient</h2>
</div>

<div class="row">
	<div class="col-md-3 text-center">
		<span id="img">
			<% if @ingredient.image? %>
				<%= image_tag @ingredient.image.image.url(:large), class: "img-thumbnail", style: "width: 100%" %>
				<%= link_to "Crop Photo", edit_image_path(@image), class: "btn btn-primary btn-block", remote: true %>
			<% else %>
				<%= fa_icon "picture-o", style: "font-size: 150px; color: #dddddd" %>
			<% end %>
		</span>
		<br>
		<%= form_for @image, remote: true, html: {id: "img-form"} do |image| %>
			<%= image.file_field :image,  id: "img-file" %>
			<%= link_to "Upload Photo", "#", class: "btn btn-primary btn-block", id: "img-btn" %>
			<%= image.hidden_field :imageable_id, value: @ingredient.id %>
			<%= image.hidden_field :imageable_type, value: @ingredient.class.name %>
			<%= image.hidden_field :token, value: @ingredient.image_token %>
		<% end %>
		<br>
	</div>
	<div class="col-md-9">
		<%= nested_form_for @ingredient, html: {id: "ingredient-form"} do |f| %>
			<%= f.hidden_field :image_token %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :description %>

				<%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Describe the ingredient's physcial attributes, flavor, culinary uses, etc. (add benefits below)" %>
			</div>
			<div class="row">
				<div class="col-md-6">
					<h4>Nutrients</h4>
					<div class="row">
						<div class="col-xs-10">
							<%= text_field_tag :nutrients, nil, class: "form-control" %>
						</div>
						<div class="col-xs-2" style="padding-left: 0px">
							<%= link_to "Add", add_nutrients_path, class: "btn btn-primary btn-block" %>
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<h4>Benefits</h4>
					<%= f.fields_for :benefits do |b| %>
						<%= b.hidden_field :benefactor_id %>
						<%= b.hidden_field :benefactor_type %>
						<div class="well">
							<div class="form-group row">
								<div class="col-xs-11">
									<%= b.text_field :name, class: "form-control input-sm", placeholder: "Name" %>
								</div>
								<div class="col-xs-1" style="padding: 1px 0px 0px 0px; font-size: 20px">
									<%= b.link_to_remove raw(fa_icon "times-circle"), class: "btn-primary-bg" %>
								</div>
							</div>
							<div class="form-group row">
								<div class="col-xs-11">
									<%= b.text_area :description, class: "form-control input-sm", placeholder: "Description", rows: 2 %>
								</div>
							</div>
							<div class="form-group row">
								<div class="col-xs-11">
									<%= b.text_field :source, class: "form-control input-sm", placeholder: "Source" %>
								</div>
							</div>
						</div>
					<% end %>
					<%= f.link_to_add "Add Benefit", :benefits, class: "btn btn-xs btn-primary" %>
				</div>
			</div>
			<br>
			<br>
			<%= link_to "Cancel", :back, class: "btn btn-default" %>
			<%= f.submit "Save", class: "btn btn-success" %>
		</div>
	<% end %>
</div>