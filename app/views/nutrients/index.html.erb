<div class="row">
	<div class="col-md-8">
		<%= search_form_for @search, remote: true do |f| %>
			<%= f.text_field :name_or_description_or_benefits_name_or_benefits_description_cont, id: "ingredient-search", class: "index-search form-control input-lg", placeholder: "Search", data: {type: "nutrient"} %>
			<%= hidden_field_tag :page, 1 %>
		<% end %>
		<br>
		<div id="nutrients" class="well">
			<%= render @nutrients %>
		</div>
		<br>
		<%= render 'layouts/infinite', model: Nutrient, per: 12 %>
	</div>
	<div class="col-md-4">
		<%= link_to "Add Nutrient", new_nutrient_path, class: "btn btn-lg btn-primary btn-block", style: "margin-bottom: 10px" if user_signed_in? %>
		<%= render 'layouts/sidebar' %>
	</div>
</div>
