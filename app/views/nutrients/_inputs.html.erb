<div class="row">
	<div class="col-sm-9">
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="col-sm-3">
		<div class="form-group">
			<%= f.label :symbol %>
			<%= f.text_field :symbol, class: "form-control" %>
		</div>
	</div>
</div>

<div class="form-group">
	<%= f.label :description %>
	<% if mobile_device? %>
		<br>
		<%= f.text_area :description, id: "description", class: "form-control summernote" %>
	<% else %>
		<%= f.cktext_area :description, class: 'ckeditor', id: "description", ckeditor: {toolbar: "Mini"} %>
	<% end %>
</div>
<%= label_tag :citations %> <%= fa_icon 'question-circle', data: {toggle: 'popover-hover', placement: 'right', content: 'Cite the sources of information used to provide content about this nutrient.'} %>
<br>
<%= f.fields_for :citations do |b| %>
	<div class="row form-group add-ingredient">
		<div class="col-sm-11">
			<%= b.text_field :source, class: "form-control input-sm", placeholder: "Source" %>
			<%= b.hidden_field :citer_type %>
			<%= b.hidden_field :citer_id %>
		</div>
		<div class="col-sm-1">
			<%= b.link_to_remove raw(fa_icon "times-circle"), class: "btn-primary-bg hidden-xs" %>
			<%= b.link_to_remove "Remove", class: "btn btn-xs btn-danger visible-xs pull-right" %>
		</div>
	</div>
<% end %>
<%= f.link_to_add "Add Citation", :citations, class: "btn btn-xs btn-primary" %>
