<div class="row">
	<div class="col-sm-9">
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="col-sm-3">
		<div class="form-group">
			<%= f.label :symbol %>
			<%= f.text_field :symbol, class: "form-control" %>
		</div>
	</div>
</div>

<div class="form-group">
	<%= f.label :description %>
	<% if mobile_device? %>
		<br>
		<%= f.text_area :description, id: "description", class: "form-control summernote" %>
	<% else %>
		<%= f.cktext_area :description, class: 'ckeditor', id: "description", ckeditor: {toolbar: "Mini"} %>
	<% end %>
</div>
<%= label_tag :benefits %> <%= fa_icon 'question-circle', data: {toggle: 'popover-hover', placement: 'right', content: 'List the benefits of this nutrient (strong bones, antioxidants), and provide a link to the source where the information can be verified.'} %>
<br>
<%= f.fields_for :benefits do |b| %>
	<div class="row form-group add-ingredient">
		<div class="col-sm-5">
			<%= b.text_field :name, class: "form-control input-sm", placeholder: "Name" %>
		</div>
		<div class="col-sm-5">
			<% benefit = b.object %>
			<%= b.fields_for :citation, Citation.where(citable_type: benefit.class.name, citable_id: benefit.id).first_or_initialize do |c| %>
				<%= c.text_field :source, class: "form-control input-sm", placeholder: "Citation" %>
				<%= c.hidden_field :citable_type %>
				<%= c.hidden_field :citable_id %>
				<%= c.hidden_field :citer_type %>
				<%= c.hidden_field :citer_id %>
			<% end %>
		</div>
		<div class="col-sm-1">
			<%= b.link_to_remove raw(fa_icon "times-circle"), class: "btn-primary-bg hidden-xs" %>
			<%= b.link_to_remove "Remove", class: "btn btn-xs btn-danger visible-xs pull-right" %>
		</div>
	</div>
<% end %>
<%= f.link_to_add "Add Benefit", :benefits, class: "btn btn-xs btn-primary" %>
