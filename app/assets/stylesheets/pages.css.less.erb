@yellow: #f4ff4c;
@yellow-hover: #d8e500;

body.home {
	background: url(<%= image_path('home.jpg') %>) no-repeat fixed top;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

#overlay {
	left: 0;
	right: 0;
	background-color: rgba(0,0,0,0.5);
	position: absolute;
	color: #ffffff;
	.btn-block {
		margin-bottom: 10px;
	}
}

div#mission {
	font-weight: 200;
	padding: 30px 0px;
	p.lead {
		font-size: 30px;
		font-family: 'Josefin Slab', serif;
	}
	div.statement {
		font-size: 18px;
		border-left: 1px solid #ffffff;
		padding-left: 15px;
		font-weight: 200;
	}
}

@media screen and (max-width: 1200px) {
  .btn-hg {
    margin-top: 10px;
  }
}

.btn-hg {
  font-size: 30px;
  padding: 20px;
  background-color: @yellow;
  color: #333333;
}

.btn-hg:hover {
	background-color: @yellow-hover;
	color: #333333;
}

a.home-link {
	font-size: 20px;
	color: #ffffff;
	font-weight: 200;
	text-shadow: 1px 2px black;
	i {
		margin-right: 5px;
	}
}

a.home-link:hover {
	color: @yellow-hover;
}

div#home {
	margin-bottom: 0px;
}

div.jumbotron {
  color: #ffffff;
  background-color: transparent;
  h1 {
    text-shadow: 2px 2px black;
  }
}

@media screen and (min-width: 768px) {
  .jumbotron {
    padding-top: 48px;
    padding-bottom: 48px;
  }
  .container .jumbotron {
    padding-left: 60px;
    padding-right: 60px;
  }
  .jumbotron h1 {
    font-size: 60px;
  }
}

@media screen and (max-width: 768px) {
  .jumbotron h1 {
    font-size: 25px;
    text-align: center;
  }
}

.btn-learn {
	text-align: left;
	white-space: normal;
	padding: 20px;
	h3 {
		color: #ffffff;
		margin-top: 10px;
	}
}

div.blenders {
	text-align: center;
	img {
		width: 100%;
	}
}
