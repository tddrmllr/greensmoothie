body.home {
	background: url(<%= image_path('home.jpg') %>) no-repeat fixed top;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

#overlay {
	left: 0;
	right: 0;
	background-color: rgba(0,0,0,0.5);
	position: absolute;
	color: #ffffff;
	.btn-block {
		margin-bottom: 10px;
	}
}

div#mission {
	font-weight: 200;
	padding: 30px 0px;
	p.lead {
		font-size: 30px;
		font-family: 'Josefin Slab', serif;
	}
	div.statement {
		font-size: 18px;
		border-left: 1px solid #ffffff;
		padding-left: 15px;
		font-weight: 200;
	}
}

@media screen and (max-width: 1200px) {
  .btn-hg {
    margin-top: 10px;
  }
}

.btn-hg {
	background-color: #f4ff00 ;
  font-size: 30px;
  padding: 20px;
  color: #666666;
}